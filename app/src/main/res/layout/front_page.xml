<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#efeeee">

    <TextView
        android:layout_width="157.5dp"
        android:layout_height="180dp"
        android:text="Tracks"
        android:id="@+id/tracks"
        android:background="@drawable/front_page_design"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="39dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:onClick="onTracksClicked" />

    <TextView
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:text="Start Skating"
        android:id="@+id/startSkating"
        android:background="@drawable/save_button_design"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textSize="33dp"
        android:textColor="#ffffff"
        android:onClick="onStartClicked"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="36dp"
        android:layout_alignEnd="@+id/profile"
        android:layout_alignStart="@+id/custom" />

    <TextView
        android:layout_width="157.5dp"
        android:layout_height="180dp"
        android:text="Map"
        android:id="@+id/map"
        android:background="@drawable/front_page_design"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_marginRight="15dp"
        android:onClick="onMapClicked"
        android:layout_alignTop="@+id/tracks"
        android:layout_alignStart="@+id/profile" />

    <TextView
        android:layout_width="157.5dp"
        android:layout_height="180dp"
        android:text="Custom"
        android:id="@+id/custom"
        android:background="@drawable/front_page_design"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_marginLeft="15dp"
        android:layout_alignTop="@+id/profile"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="157.5dp"
        android:layout_height="180dp"
        android:text="Profile"
        android:id="@+id/profile"
        android:background="@drawable/front_page_design"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/map"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp" />

</RelativeLayout>